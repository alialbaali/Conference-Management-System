<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Confy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/imperial_red</item>
        <item name="colorPrimaryVariant">@color/amaranth_red</item>
        <item name="colorOnPrimary">@color/alice_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/manatee</item>
        <item name="colorSecondaryVariant">@color/manatee</item>
        <item name="colorOnSecondary">@color/alice_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/alice_blue</item>
        <item name="android:navigationBarColor">@color/alice_blue</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/space_cadet</item>

        <item name="android:colorBackground">@color/alice_blue</item>
        <item name="colorOnBackground">@color/space_cadet</item>

        <item name="colorSurface">@color/alice_blue</item>
        <item name="colorOnSurface">@color/space_cadet</item>
        <!-- Customize your theme here. -->
    </style>
</resources>