<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IntroTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceHeadline1</item>
        <item name="android:textColor">?colorSecondaryVariant</item>
        <item name="android:alpha">0.85</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="startIconTint">?colorSecondary</item>
        <item name="boxStrokeColor">?colorSecondaryVariant</item>
        <item name="hintTextColor">?colorSecondaryVariant</item>
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
    </style>

    <style name="PasswordTextInputLayout" parent="OutlinedTextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="startIconDrawable">@drawable/ic_round_lock_24</item>
        <item name="passwordToggleTint">?colorSecondary</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">?textAppearanceButton</item>
    </style>

    <style name="ProfileItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
    </style>

    <style name="BottomSheetDialogFragment" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:theme">@style/Theme.Confy</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
    </style>

</resources>