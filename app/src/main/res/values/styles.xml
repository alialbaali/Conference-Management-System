<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IntroTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceHeadline1</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:alpha">0.85</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="startIconTint">?colorSecondary</item>
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
    </style>

    <style name="PasswordTextInputLayout" parent="OutlinedTextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperText">@string/password_helper_text</item>
        <item name="startIconDrawable">@drawable/ic_round_lock_24</item>
        <item name="passwordToggleTint">?colorSecondary</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">?textAppearanceButton</item>
    </style>

</resources>