<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/jc"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:padding="@dimen/spacing_normal"
        tools:context="conference.JoinConferenceFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            style="@style/IntroTextView"
            android:text="@string/join"
            android:layout_marginBottom="@dimen/spacing_extra_large"
            android:layout_height="wrap_content" />


    <com.google.android.material.textfield.TextInputLayout
            style="@style/OutlinedTextInputLayout"
            android:id="@+id/til_invitationLink"
            android:hint="@string/invitation_link"
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/spacing_small"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_invitationLink"
                style="@style/TextInputEditText"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress|textAutoComplete|textAutoCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_join"
            style="@style/PrimaryButton"
            android:layout_marginVertical="@dimen/spacing_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/join" />


</LinearLayout>
