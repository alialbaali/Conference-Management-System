<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Confy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/imperial_red</item>
        <item name="colorPrimaryVariant">@color/amaranth_red</item>
        <item name="colorOnPrimary">@color/alice_blue</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/manatee</item>
        <item name="colorSecondaryVariant">@color/manatee</item>
        <item name="colorOnSecondary">@color/alice_blue</item>

        <!-- Background color. -->
        <item name="android:colorBackground">@color/space_cadet</item>
        <item name="colorOnBackground">@color/alice_blue</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/space_cadet</item>
        <item name="colorOnSurface">@color/alice_blue</item>

        <!-- System bars color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/space_cadet</item>
        <item name="android:navigationBarColor">@color/space_cadet</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/alice_blue
        </item>

    </style>

</resources>